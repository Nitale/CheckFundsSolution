<Window x:Class="CheckFunds.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CheckFunds"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <StackPanel Width="800" Height="420" MaxWidth="800" MaxHeight="420" Margin="0">
        <Label x:Name="GeneralMessage" Content="Hello World!" Background="#00000000" Width="600" Height="28" FontWeight="Bold"/>
        <TextBox x:Name="TextDisplay" Height="253" TextWrapping="Wrap" Text="TextBox" Background="#FF151313" Padding="0" Width="640" HorizontalAlignment="Left" Margin="20,0,60,15" FontFamily="Segoe UI Semilight" Foreground="White" FontWeight="Bold"/>
        <Button x:Name="FolderButton" Click="FolderButton_Click" Content="Browse" Width="50" Height="22" FontWeight="Bold" HorizontalAlignment="Right" Margin="0,0,20,0"/>
        <Label x:Name="PathMessage" Content="Indicate the &quot;Marketing&quot; folder" FontWeight="Bold" HorizontalAlignment="Right" Margin="0,-22,90,0"/>
        <Button x:Name="StartButton" Content="Start" Width="70" Height="25" HorizontalAlignment="Right" Margin="0,50,20,0" FontWeight="Bold"/>
    </StackPanel>

</Window>
